<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EventFragmentAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomSheetPayment" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/modal_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetPayment" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetPayment</item>
    </style>

    <style name="BottomSheetPaymentTheme" parent="BaseBottomSheetPayment" />

</resources>